<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h4>Create a new movie</h4>
            </div>    
        
        <div class="card-body">
            
        
        <form asp-asp-controller="Movie" asp-action="CreateMovie" method="post">
