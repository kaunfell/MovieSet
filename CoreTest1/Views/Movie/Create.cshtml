                <input asp-for=MovieTitle type="text" placeholder="movie title..." class="form-control"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Director</label>
                <input asp-for=Director type="text" placeholder="director's name..." class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Year</label>
                <input asp-for=Year type="number" placeholder="release year..." class="form-control">
            </div>
            <div class="mb-3">
                <button type="" class="btn btn-primary">Save</button>
            </div>
        </form>


